{
    "window.zoomLevel": 0,
    "files.eol": "\n",
// AutoSaving, every minute
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 60000,
// Tab to spaces
    "editor.tabSize": 2,
// Show white character, everytime
    "editor.renderWhitespace": "all",
    "editor.insertSpaces": true,
// blinking cursor
    "editor.cursorStyle": "line",
// MultiCursor
    "editor.multiCursorModifier": "alt",
// Font Size
    "editor.fontSize": 14,
// Enable/Disable the Preview
    "workbench.editor.enablePreview": true,
// Rigth minimap Size
    "editor.minimap.scale": 2,
    "editor.minimap.showSlider": "always",
// Insert new line at the document final, ever
    "files.insertFinalNewline": true,
// Left (Default) Activity Bar
    "workbench.activityBar.location": "default",
// Color Theme
    "workbench.colorTheme": "Monokai Dimmed",
// Status Bar
    "workbench.statusBar.visible": true,
// Upper tabs
    "workbench.editor.showTabs": "multiple",
// Disabling the telemetry, Sorry Bill
    "telemetry.telemetryLevel": "off",
// Disabling the GitLens telemetry
    "gitlens.telemetry.enabled": false,
// Native Bracket Colorizer
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs":"active",
    "editor.guides.bracketPairsHorizontal": true,
    "editor.guides.highlightActiveBracketPair": true,
// Enabling Better Comments (can be configured all the keychars)
    "better-comments.multilineComments": true,
    "better-comments.highlightPlainText": false,
}
